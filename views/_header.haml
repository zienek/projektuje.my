:css
  #header-badge {
    width: 250px;
    height: 300px;
    background: #ff0000;
    color: white;
    text-align: center;
  }
  
  .header {
    background-image:url('/images/coffee.jpg');
  }
  
  #header-badge, 
  #header-badge a {
    font-family: "Lobster Two", cursive;
    color: #ffffff;
  }
  
  .container.header {
    height: 400px;
  }
  
  #nav{
    z-index: 1000;
    background-color: rgba(0, 0, 0, 0.298);
    border-bottom: 1px solid #000000;
    height: 80px;
    margin-bottom: 15px;
  }
  
  #nav.affix {
      position: fixed;
      top: 0;
      width: 100%
  }

  #nav > .navbar-inner {
      border-left: 0;
      border-right: 0;
      border-radius: 0;
      -webkit-border-radius: 0;
      -moz-border-radius: 0;
      -o-border-radius: 0;
  }
  
